.container {
    height: 100%;
    width: 100%;
}

.text-container {
    display: flex;
    flex-direction: column;
    margin: 200rpx 50rpx 0rpx 50rpx;
}

.text-container l-textarea {
    color: white;
}

.title {
    font-size: xx-large;
}

.textarea {
    font-size: medium;
    margin-top: 30rpx;
}

/* 背景图片 */
.bg-image {
    position: absolute;
    top: 0;
    height: 100%;
    width: 100%;
    z-index: -100;
}

l-input {
    font-size: xx-large;
}

.l-form-btn-class {
    display: flex;
    justify-content: space-around;
    margin-top: 10rpx;
}

.bg-select-container {
    display: flex;
    flex-direction: column;
    margin: 30rpx 30rpx 0 70rpx;
}


.image-pick {
    width: 50rpx;
    height: 50rpx;
}

.btn-container {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    padding: 30rpx 30rpx 0 30rpx;
}